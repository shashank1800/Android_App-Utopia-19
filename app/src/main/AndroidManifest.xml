<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rnsit.utopia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".TeamPdfView"
            android:parentActivityName=".TeamPdfView">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rnsit.utopia.MainActivity" />
        </activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivityTheme">

        </activity>
        <activity
            android:name=".Teams"
            android:label="Teams"
            android:parentActivityName=".Teams">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rnsit.utopia.MainActivity" />
        </activity>
        <activity
            android:name=".Results"
            android:label="Results"
            android:parentActivityName=".Results">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rnsit.utopia.MainActivity" />
        </activity>
        <activity
            android:name=".Events"
            android:label="Events"
            android:parentActivityName=".Events">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rnsit.utopia.MainActivity" />
        </activity>
        <activity
            android:name=".Contact"
            android:label="Coordinators"
            android:parentActivityName=".Contact">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rnsit.utopia.MainActivity" />
        </activity>
        <activity
            android:name=".AboutApp"
            android:parentActivityName=".AboutApp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rnsit.utopia.MainActivity" />
        </activity>

        <service android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />
        <meta-data android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_name" />
    </application>
</manifest>